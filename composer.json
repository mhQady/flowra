{
  "name": "mhqady/flowra",
  "type": "library",
  "description": "A powerful and flexible workflow management package for Laravel that stores and manages workflows entirely in your database. It enables you to define states, transitions, and actions dynamically without hardcoding logic, giving you full control over business processes.",
  "keywords": [
    "laravel",
    "workflow",
    "state machine",
    "status",
    "workflow engine",
    "flowra"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mohamed AlQady",
      "email": "mh.qady@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "illuminate/support": "^v12.0.0"
  },
  "require-dev": {
    "orchestra/testbench": "^10.4",
    "pestphp/pest": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Flowra\\": "src/"
    }
  },
  "extra": {
    "component": "package",
    "branch-alias": {
      "dev-main": "0.x-dev"
    },
    "laravel": {
      "providers": [
        "Flowra\\FlowraServiceProvider"
      ],
      "aliases": {
        "Flowra": "Flowra\\Facades\\Flowra"
      }
    }
  },
  "support": {
    "issues": "https://github.com/mhQady/flowra/issues"
  },
  "prefer-stable": true,
  "minimum-stability": "stable",
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/",
      "Workbench\\Database\\Factories\\": "workbench/database/factories/",
      "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@prepare"
    ],
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": "@php vendor/bin/testbench workbench:build --ansi",
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve --ansi"
    ],
    "test": "vendor/bin/pest --colors=always",
    "art": "vendor/bin/testbench --ansi"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
